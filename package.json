{
  "name": "flashtap",
  "version": "0.1.1",
  "description": "FlashTap Game Library",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/YOUR_REPO.git"
  },
  "main": "dist/flashtap.cjs.js",
  "module": "dist/flashtap.es.js",
  "types": "dist/types/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/flashtap.es.js",
      "require": "./dist/flashtap.cjs.js",
      "default": "./dist/flashtap.es.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "vite build",
    "build:docs": "npm run build -w docs",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "npm run build && vitest run tests/integration",
    "test:all": "npm run test:unit && npm run test:integration",
    "smoke:esm": "node scripts/smoke-esm.mjs",
    "smoke:cjs": "node scripts/smoke-cjs.cjs",
    "smoke": "npm run smoke:esm && npm run smoke:cjs",
    "coverage": "vitest run tests/unit --coverage",
    "size": "npm run build && node scripts/check-bundle-size.mjs",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "library",
    "template"
  ],
  "author": "",
  "license": "MIT",
  "workspaces": [
    "docs"
  ],
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.4",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "happy-dom": "^20.0.11",
    "playwright": "^1.57.0",
    "typescript": "^5.9.3",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "lucide-react": "^0.562.0"
  }
}
